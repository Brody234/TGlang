{
    "scopeName": "source.tg",
    "name": "TG Language",
    "patterns": [
      { "include": "#keywords" },
      { "include": "#types" },
      { "include": "#numbers" },
      { "include": "#identifiers" },
      { "include": "#operators" },
      { "include": "#comments" }
    ],
    "repository": {
      "keywords": {
        "patterns": [
          {
            "name": "keyword.operator.assignment.tg",
            "match": "="
          }
        ]
      },
      "types": {
        "patterns": [
          {
            "name": "storage.type.tg",
            "match": "\\b(int32|int64|float32|float64|string|bool)\\b"
          }
        ]
      },
      "numbers": {
        "patterns": [
          {
            "name": "constant.numeric.tg",
            "match": "\\b\\d+\\b"
          }
        ]
      },
      "identifiers": {
        "patterns": [
          {
            "name": "variable.other.tg",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
          }
        ]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.arithmetic.tg",
            "match": "[+\\-*/]"
          }
        ]
      },
      "comments": {
        "patterns": [
          {
            "name": "comment.line.double-slash.tg",
            "match": "//.*$"
          }
        ]
      }
    }
  }
  